<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- plugin randomkeyboard use -->
	<!-- 键盘NUM 按钮 -->
    <style name="plugin_randomkeyboard_key_board_num_btn_bg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/plugin_randomkeyboard_key_bg_select</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 键盘NUM 中间按钮 -->
    <style name="plugin_randomkeyboard_key_board_num_center_btn_bg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/plugin_randomkeyboard_key_bg_select</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 键盘ABC -->
    <style name="plugin_randomkeyboard_key_board_abc_btn_bg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/plugin_randomkeyboard_key_bg_select</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 键盘SIGN 按钮 -->
    <style name="plugin_randomkeyboard_key_board_sign_btn_bg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/plugin_randomkeyboard_key_bg_select</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="android:layout_marginRight">0.5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
	
	<style name="plugin_randomkeyboard_activity_transparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
</resources>