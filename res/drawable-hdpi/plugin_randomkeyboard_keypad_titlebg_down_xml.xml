<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_focused="true" android:state_pressed="true">
        <bitmap 
            android:src="@drawable/plugin_randomkeyboard_keypad_down_dark"
            android:tileMode="disabled"
            android:gravity="center"/>
    </item>
    <item android:state_focused="false" android:state_pressed="true" >
        <bitmap 
            android:src="@drawable/plugin_randomkeyboard_keypad_down_dark"
            android:tileMode="disabled"
            android:gravity="center"/>
    </item>
    <item android:state_focused="true" >
        <bitmap 
            android:src="@drawable/plugin_randomkeyboard_keypad_down_dark"
            android:tileMode="disabled"
            android:gravity="center"/>
    </item>
    <item android:drawable="@drawable/plugin_randomkeyboard_keypad_down_light" android:state_focused="false" >
        <bitmap 
            android:src="@drawable/plugin_randomkeyboard_keypad_down_light"
            android:tileMode="disabled"
            android:gravity="center"/>
    </item>
</selector>