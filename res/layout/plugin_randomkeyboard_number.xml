<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:padding="5dp" 
    android:clickable="false"
    android:orientation="vertical" 
    android:weightSum="4">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal" >

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/plugin_randomkeyboard_key_board_num_one"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:text="1"
            android:textSize="18sp"  />

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_two"
            style="@style/plugin_randomkeyboard_key_board_num_center_btn_bg"
            android:text="2" 
            android:textSize="18sp" />

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_three"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:text="3" 
            android:layout_marginRight="3dp"
            android:textSize="18sp" />
        
        <Button
            android:id="@+id/plugin_randomkeyboard_btnNumBoardDelet"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@drawable/plugin_randomkeyboard_key_delete_greenbg_select"/>
        
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_four"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:layout_marginLeft="1dp"
            android:text="4" 
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_five"
            style="@style/plugin_randomkeyboard_key_board_num_center_btn_bg"
            android:text="5" 
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_six"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:text="6" 
            android:layout_marginRight="3dp"
            android:textSize="18sp" >
        </Button>
        
        <Button
            android:layout_marginLeft="2dp"
            android:id="@+id/plugin_randomkeyboard_btnNumBoardPoint"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@drawable/plugin_randomkeyboard_key_bg_select"
            android:text="@string/plugin_randomkeyboard_char_46"
            android:textColor="@color/black"
            android:textSize="18sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_seven"
            android:layout_marginLeft="1dp"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:text="7" 
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_eight"
            style="@style/plugin_randomkeyboard_key_board_num_center_btn_bg"
            android:text="8" 
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_nine"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:layout_marginRight="3dp"
            android:text="9" 
            android:textSize="18sp" >
        </Button>
        
        <Button
            android:layout_marginLeft="2dp"
            android:id="@+id/plugin_randomkeyboard_btnNumBoard__key_pad_sign_14"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@drawable/plugin_randomkeyboard_key_bg_select"
            android:text="@string/plugin_randomkeyboard_char_37"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- 输入法切换 -->

        <Button
            android:id="@+id/plugin_randomkeyboard_btnNumBoardChangeAbc"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/plugin_randomkeyboard_key_dot_bg_select"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/plugin_randomkeyboard_bottomfirstview"
            android:layout_width="0dp"
             android:visibility="visible"
             android:clickable="false"
            android:layout_height="fill_parent"
            android:layout_weight="0.02" />
        
         <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_zero"
            style="@style/plugin_randomkeyboard_key_board_num_center_btn_bg"
            android:text="0" />
        

        <Button
            android:layout_marginLeft="2dp"
            android:id="@+id/plugin_randomkeyboard_btnNumBoardSpace"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:background="@drawable/plugin_randomkeyboard_key_space_layer"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />
        
           <Button
            android:id="@+id/plugin_randomkeyboard_btnNum_X"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/plugin_randomkeyboard_key_bg_select"
            android:text="X"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="18sp" />
        

       
        <!-- 完成 -->

        <Button
            android:id="@+id/plugin_randomkeyboard_btnNumBoardOk"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/plugin_randomkeyboard_key_sure_bg_select"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>